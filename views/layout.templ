package views


templ bareLayout() {
	<!DOCTYPE html>
	<html class="">
		<head>
			<title>RSS Feed</title>
      <script src="/static/js/htmx.min.js"></script>
      <link rel="stylesheet" href="/static/css/styles.css"/>
			<script src="https://cdn.tailwindcss.com"></script>
			
      <script>
				tailwind.config = {
					darkMode: "class",
					theme: {
						extend: {
							colors: {
								clifford: '#da373d',
							}
						}
					}
				}
			</script>
		</head>
		<body class="dark">
			<div class="flex flex-col min-h-screen">
				{ children... }
			</div>
		</body>
	</html>
}

templ layout() {
	<!DOCTYPE html>
	<html class="">
		<head>
			<title>RSS Feed</title>

      <script src="/static/js/htmx.min.js"></script>
      <link rel="stylesheet" href="/static/css/styles.css"/>
			<script src="https://cdn.tailwindcss.com"></script>
			
			<script>
				tailwind.config = {
					darkMode: "class",
					theme: {
						extend: {
							colors: {
								clifford: '#da373d',
							}
						}
					}
				}
			</script>
		</head>
		<body class="dark">
			<div class="flex flex-col min-h-screen">
				@navbar()
         
			if ctx.Value("msgs") != nil {
				@renderMessages(ctx.Value("msgs").([]map[string]string))
      }
				<main class="flex-1 ">
					{ children... }
				</main>
				@footer()
			</div>
		</body>
	</html>
}



templ navbar(){
	<header class="h-14 flex items-center container max-w-screen-xl mx-auto border-b px-4 md:px-6">
		<a href="/">
			<h1 class="text-2xl font-bold">TECH FEED</h1>
		</a>
		<nav class="ml-auto flex gap-4 sm:gap-6">
			<a referrerpolicy="no-referrer" class="text-sm font-medium hover:underline underline-offset-4" href="/home">
				Home
			</a>
			<a class="text-sm font-medium hover:underline underline-offset-4" href="/feeds">
				Feed
			</a>
			if ctx.Value("user") != nil {
				<form method="post" action="/logout">
					<button class="text-sm font-medium hover:underline underline-offset-4" type="submit">
						Logout	
					</button>
				</form>
			} else {
				<a class="text-sm font-medium hover:underline underline-offset-4" href="/register">
					Register
				</a>
				<a class="text-sm font-medium hover:underline underline-offset-4" href="/login">
					Login
				</a>
			}
		</nav>
	</header>
}

templ footer(){
	<footer class="flex flex-col gap-2 sm:flex-row py-6 px-4 md:px-6 w-full shrink-0 items-center border-t container max-w-screen-xl mx-auto">
		<p class="text-xs text-gray-500 ">
